<div class="card song-card">
  <div class="row g-0">
    <div class="col-md-4">
      <img
        src={{coverImageUrl}}
        class="img-fluid rounded-start"
        alt={{songAlbum}}
      />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">
          {{songTitle}}
        </h5>
        <h6>{{songAlbum}}</h6>
        <p class="card-text">{{songArtists}}</p>
        <p class="card-text">
          <small class="text-muted"><a
              href={{albumShareLink}}
              target="_blank"
              class="share-link"
            ><i class="fa-brands fa-spotify me-2"></i>Open on Spotify</a></small>
        </p>
      </div>
    </div>
  </div>
</div>