{{> privateNavBar}}

<main class="container">
  <!-- playlist info -->
  <section class="d-flex flex-column justify-content-center mt-4">
    <div class="card mb-3">
      <img
        src={{playlist.imageUrl}}
        class="card-img-top"
        alt={{playlist.title}}
      />
      <div class="card-body">
        <h5 class="card-title text-center mb-3">{{playlist.title}}</h5>
        <div class="d-flex justify-content-center flex-wrap flex-row">
          {{#each playlist.songs as |song|}}
            {{> playlistSong}}
          {{/each}}
        </div>
      </div>
    </div>
  </section>

  <section class="mt-4 border p-3 rounded-2 bg-light">
    <h2 class="text-center">Add your Review</h2>
    <hr />
    <form class="mt-4" id="add-review-form">
      <div class="mb-3">
        <textarea
          type="text"
          class="form-control"
          id="review"
          placeholder="Enter your review..."
        ></textarea>
      </div>
      <div class="mb-3 text-center text-danger error-text">
        Failed to add review. Please try again.
      </div>
      <div class="text-center">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </section>

  <!-- all reviews -->
  <section class="mt-3">
    <h2 class="text-center">Reviews</h2>
    <hr />

