    <div class="container-fluid">
      <a class="navbar-brand text-uppercase" href="/">Codify</a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarNav"
        aria-controls="navbarNav"
