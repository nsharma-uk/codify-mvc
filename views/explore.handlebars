{{> privateNavBar}}

<main class="container">
  <div class="modal" tabindex="-1" id="add-to-playlist-modal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Add to Playlist</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="add-to-playlist-form">
            <div class="mb-3">
              <select class="form-select" id="playlist-select">
                {{#each playlists as |playlist|}}
                  <option value="{{playlist.id}}">{{playlist.title}}</option>
                {{/each}}
              </select>
            </div>
            <div class="mb-3">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
            <div id="add-to-playlist-error"></div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <section class="mt-4 border p-3 rounded-2 bg-light">
    <h2 class="text-center">Explore</h2>
    <hr />
    <form class="mt-4" id="explore-form">
      <div class="mb-3">
        <input
          type="text"
          class="form-control"
          id="query"
          placeholder="Enter a song title"
        />
      </div>
      <div id="explore-error"></div>
      <div class="text-center">
        <button type="submit" class="btn btn-primary">Search</button>
      </div>
    </form>
  </section>

  <section class="mt-3">
    <h2 class="text-center">Search Results</h2>
    <hr />

    <div
      class="d-flex justify-content-center flex-wrap flex-row"
      id="songs-container"
    >
      <h2>Your results will appear here</h2>
    </div>
  </section>
</main>